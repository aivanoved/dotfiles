[core]
    excludesfile = ~/.gitignore_global
    pager = delta
    editor = nvim

[user]
    name = Alexander Ivanov
    email = alexander.valentinov.ivanov@gmail.com

[alias]
    root = "rev-parse --show-toplevel"

[url "git@github.com:"]
    insteadOf = https://github.com/

[commit]
    gpgsign = true

[tag]
    gpgSign = true

[include]
    path = ~/.gitconfig_local

[delta]
    navigate = true
    line-numbers = true

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
    tool = difftastic

[difftool]
    prompt = false

[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"
